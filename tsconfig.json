{
    "compilerOptions": {
        "lib": ["ES2023"],
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "declaration": true,
        //"composite": true,
        "declarationMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "types": ["node"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "sourceMap": true,
        "noEmit": false,
        "paths": {
            "got": ["./node_modules/got/dist/source"]
        }
    },
    "ts-node": {
        "esm": true,
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true,
	}
}